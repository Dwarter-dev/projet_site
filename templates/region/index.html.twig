{% extends 'baseAdmin.html.twig' %}

{% block title %}Régions!{% endblock %}

{% block body %}
<h1 class="pb-5">Liste des régions</h1>

<table class="table text-center table-hover table-sm">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
        </tr>
    </thead>
    <tbody>
        {% for regions in region %}
            <tr>
              <td class="align-middle">{{ loop.index }}</td>
              <td class="align-middle">{{ regions.nomRegion }}</td>
              <td class="align-middle">
                  <a href="{{ path( 'region_update', {'id': region.id} ) }}" class="text-primary"><i class="fas fa-pen-square"></i></a>
                  <a href="{{ path( 'region_delete', {'id': region.id} ) }}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="d-flex justify-content-end my-5">
    <a href="{{ path('region_create') }}" class="btn btn-success">Ajouter une Région</a>
</div>
{% endblock %}
