{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Langues!{% endblock %}

{% block body %}
<h1 class="pb-5">Liste des catégories</h1>

<table class="table text-center table-hover table-sm">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
        </tr>
    </thead>
    <tbody>
        {% for langues in langue %}
            <tr>
              <td class="align-middle">{{ loop.index }}</td>
              <td class="align-middle">{{ langues.nomLangue }}</td>
              <td class="align-middle">
                  <a href="{{ path( 'langue_update', {'id': langues.id} ) }}" class="text-primary"><i class="fas fa-pen-square"></i></a>
                  <a href="{{ path( 'langue_delete', {'id': langues.id} ) }}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="d-flex justify-content-end my-5">
    <a href="{{ path('langue_create') }}" class="btn btn-success">Ajouter une Langue</a>
</div>
{% endblock %}
